{
    "name": "neptunedesign/weight-conversions",
    "description": "Weight conversions in PHP",
    "keywords": [
        "NeptuneDesign",
        "weight-conversions"
    ],
    "homepage": "https://github.com/neptunedesign/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Neptune Design",
            "email": "fabrice.fortez@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "NeptuneDesign\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NeptuneDesign\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
